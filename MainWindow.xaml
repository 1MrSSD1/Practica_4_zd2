<Window x:Class="WpfApp80.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp80"
        mc:Ignorable="d"
        Title="MainWindow" Background="Crimson" Height="300" Width="300">
    <Grid>
        <StackPanel>
        <Label Grid.Row="0" Grid.Column="0" Content="Введите возраст:"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="Box1" Margin="5"/>
        <Button Grid.Row="1" Grid.ColumnSpan="2" Content="OK" Click="Button_Click" Margin="5"/>
        <TextBlock Grid.Row="2" Grid.ColumnSpan="2" x:Name="Block1" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
